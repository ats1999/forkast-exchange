{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/forkast-exchange/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/forkast-exchange/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/forkast-exchange",
  "projects": {
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "forkast-exchange": {
      "type": "application",
      "root": "apps/forkast-exchange",
      "entryFile": "main",
      "sourceRoot": "apps/forkast-exchange/src",
      "compilerOptions": {
        "tsConfigPath": "apps/forkast-exchange/tsconfig.app.json"
      }
    },
    "infra": {
      "type": "library",
      "root": "libs/infra",
      "entryFile": "index",
      "sourceRoot": "libs/infra/src",
      "compilerOptions": {
        "tsConfigPath": "libs/infra/tsconfig.lib.json"
      }
    },
    "order-book-keeping-service": {
      "type": "application",
      "root": "apps/order-book-keeping-service",
      "entryFile": "main",
      "sourceRoot": "apps/order-book-keeping-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-book-keeping-service/tsconfig.app.json"
      }
    },
    "order-management-service": {
      "type": "application",
      "root": "apps/order-management-service",
      "entryFile": "main",
      "sourceRoot": "apps/order-management-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-management-service/tsconfig.app.json"
      }
    },
    "order-matching-engine": {
      "type": "application",
      "root": "apps/order-matching-engine",
      "entryFile": "main",
      "sourceRoot": "apps/order-matching-engine/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-matching-engine/tsconfig.app.json"
      }
    },
    "prisma": {
      "type": "library",
      "root": "libs/prisma",
      "entryFile": "index",
      "sourceRoot": "libs/prisma/src",
      "compilerOptions": {
        "tsConfigPath": "libs/prisma/tsconfig.lib.json"
      }
    },
    "types": {
      "type": "library",
      "root": "libs/types",
      "entryFile": "index",
      "sourceRoot": "libs/types/src",
      "compilerOptions": {
        "tsConfigPath": "libs/types/tsconfig.lib.json"
      }
    }
  }
}